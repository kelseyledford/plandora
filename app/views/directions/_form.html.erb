<!-- URL has to be specified directly in the form as a workaround for a long-standing bug with forms for singular resources -->
<div class="direction_form">
	<%= form_for @direction, :url => group_direction_path(@group) do |f| %> <br />
		<%= f.text_field :name, placeholder: 'Destination', label: 'Destination Name' %> <br />
		<%= f.text_field :street, placeholder: 'Address', label: 'Address' %> <br />
		<%= f.text_field :city, placeholder: 'City', label: 'City' %> <br />
		<%= f.text_field :state, placeholder: 'State', label: 'CA' %> <br />
		<%= f.text_field :zip, placeholder: 'Zip', label: 'Zip' %> <br />
		<%= f.label 'Details' %> <br />
		<%= f.text_area :details, {size: '30x7'} %> <br />
		<%= f.submit %>
	<% end %>
</div>