<div class="container-fluid group_show_container row">
	
	<div id="group_home_feature" class="col-md-1 col-md-6 feature_container">
		<%= link_to (image_tag "home_feature.jpg"), groups_path %>
	</div>
	<div id="group_show_feature" class="col-md-1 col-md-6 feature_container">
		<h1><%= @group.name %></h1>
		<% if @group.avatar_file_name %>
				<%= image_tag @group.avatar.url %>
		<% end %> <br/><br/>
		<p>
			<%= @group.description %> <br /><br />
			<strong>Group Members</strong>
		</p>	
		<ul>
			<% @group.users.each do |user| %>
			<li><%= user.name %></li>
			<% end %>
		</ul>
	
	</div>
	<div id="group_instagram_feature" class="col-md-1 col-md-6 feature_container">
		<% unless @group.tag != nil %>
			<%= link_to (image_tag "Instagram_feature.jpg"), new_group_tag_path(@group) %>
		<% else %>
			<%= link_to (image_tag "Instagram_feature.jpg"), group_tag_path(@group, @tag) %>
		<% end %>
	</div>
	<div id="group_description_feature" class="col-md-1 col-md-6 feature_container">
		<%unless @group.direction %>
			<%= link_to (image_tag "gmaps_feature2.jpg"), new_group_direction_path(@group) %>
		<% else %>
			<%= link_to (image_tag "gmaps_feature2.jpg"), group_direction_path(@group, @direction) %>
		<% end %>
	</div>
	<div id="group_chat_feature" class="col-md-1 col-md-6 feature_container">
		<%= link_to (image_tag "facebookwall_feature.jpg"), group_chat_path(@group, @chat) %>
	</div>
	<div id="group_link_feature" class="col-md-1 col-md-6 feature_container">
		<%= link_to (image_tag "polls_feature.jpg"), group_polls_path(@group) %>
	</div>
	<div id="group_packing_feature" class="col-md-1 col-md-6 feature_container">
		<%= link_to (image_tag "list_feature.jpg"), group_packing_items_path(@group, @packing_list) %>
	</div>
	<div id="group_itinerary_feature" class="col-md-1 col-md-6 feature_container">
		<%= link_to (image_tag "calender_feature.jpg"), group_schedules_path(@group, @schedule) %>
	</div>
	<div id="group_ideas_feature" class="col-md-1 col-md-6 feature_container">
		<%= link_to (image_tag "ideas_feature.jpg"), group_links_path(@group, @links) %>
	</div>
	<div id="group_edit_feature" class="col-md-1 col-md-6 feature_container">
		<%= link_to (image_tag "settings_feature.jpg"), edit_group_path(@group) %>
	</div>	
</div>