<div class="chat_container">
	<h1 class="chat_header">Comments Wall</h1>
	<script>(function(d, s, id) {
	  var js, fjs = d.getElementsByTagName(s)[0];
	  if (d.getElementById(id)) return;
	  js = d.createElement(s); js.id = id;
	  js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=582860648479589";
	  fjs.parentNode.insertBefore(js, fjs);
	}(document, 'script', 'facebook-jssdk'));</script>

	<%= content_tag :div, '', :class => "fb-comments", "data-href" => request.original_url, "data-numposts" => "8", "data-colorscheme" => "light" %>
</div>