<!-- <h1>Listing tags</h1> -->
<% if flash[:notice] %>
  <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<h1 class="text-center">Create Hash Tag</h1>
<div class="tag_index_container">
  <div class="tag_index_header">
    <h1>Hashtags</h1>
  </div>

  <p id="notice"><%= notice %> </p>

<div class="well well-lg">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th></th>
        <th></th>
        <th></th>
     </tr>
    </thead>

    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td><%= tag.name %></td>
          <td><%= link_to 'Show', group_tag_path(@group, tag) %></td>
          <td><%= link_to 'Edit', edit_group_tag_path(@group,tag) %></td>
          <td><%= link_to 'Destroy', group_tag_path(@group, tag), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
</table>
</div>

<br>
<div class="text-center">
<%= link_to 'New Tag', new_group_tag_path(@group), class: 'btn btn-default btn-lg' %>
</div>
  </table>

  <br>

  <li class="new_tag_button"><%= link_to 'New Tag', new_group_tag_path(@group), class:"new_tag_link" %></li>

</div>
