<div class="tag_index_container">
  <div class="tag_index_header">
    <h1>Hashtags</h1>
  </div>

  <p id="notice"><%= notice %> </p>


    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td><%= tag.name %></td>
          <td><%= link_to 'Show', group_tag_path(@group, tag) %></td>
          <td><%= link_to 'Edit', edit_group_tag_path(@group,tag) %></td>
          <td><%= link_to 'Destroy', group_tag_path(@group, tag), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <li class="new_tag_button"><%= link_to 'New Tag', new_group_tag_path(@group), class:"new_tag_link" %></li>

</div>
